<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:TodoApp.Shared.Converters"
    xmlns:wct_converters="using:Microsoft.Toolkit.Uwp.UI.Converters">

    <wct_converters:BoolToObjectConverter x:Key="TrueToWeakOpacity" TrueValue="0.5" FalseValue="1.0" />
    <wct_converters:CollectionVisibilityConverter x:Key="FromAnyToVisibleConverter" />
    <wct_converters:EmptyCollectionToObjectConverter x:Key="FromAnyToInvisibleConverter" EmptyValue="Visible" NotEmptyValue="Collapsed" />
    <converters:FromEnumerableToCountConverter x:Key="FromEnumerableToCountConverter" />
    <converters:FromStateItemsRemainingToPluralConverter x:Key="FromStateItemsRemainingToPluralConverter" />
    <converters:FromStateItemsRemainingToProgressConverter x:Key="FromStateItemsRemainingToProgressConverter" />

</ResourceDictionary>